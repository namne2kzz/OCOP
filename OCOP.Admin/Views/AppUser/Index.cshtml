@model List<OCOP.ViewModel.System.AppUsers.ThanhVienViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script src="~/js-controller/appuser-js-controller.js"></script>
}

<div class="card-box mb-30">
    <div class="pd-20">
        <h4 class="text-blue h4">Danh sách thành viên</h4><br />
        <a class="btn btn-dark" href="@Url.Action("CreateThanhVien", "AppUser")" role="button">Tạo mới</a>
    </div>
    <div class="pb-20">
        <table class="data-table table stripe hover">
            <thead>
                <tr>
                    <th>Ảnh</th>
                    <th class="table-plus">Tên nhân viên</th>
                    <th>Mã nhân viên</th>
                    <th>Đơn vị công tác</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Tên đăng nhập</th>
                    <th>Trạng thái</th>
                    <th class="datatable-nosort">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/user-content/@item.ImagePath" width="100" /></td>
                        <td class="table-plus">@item.Ten</td>
                        <td>@item.MaNhanVien</td>
                        <td>@item.DonViCongTac</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.UserName</td>
                        <td>
                            <a class="item-trangthai-click" href="#" data-id="@item.AppUserId">@(item.TrangThai ? "Hoạt động" : "Khóa")</a>
                        </td>
                        <td>
                            <div class="table-actions">

                                <a href="@Url.Action("UpdateThanhVien","AppUser",new { appUserId=item.AppUserId })" data-color="#265ed7" title="Cập nhật">
                                    <i class="copy fa fa-pencil"></i>
                                </a>
                                <a href="@Url.Action("AssignRole","AppRole",new { appUserId=item.AppUserId })" data-color="#265ed7" title="Gán quyền    ">
                                    <i class="icon-copy fa fa-users"></i>
                                </a>
                                <a class="item-delete-click" href="#" data-id="@item.AppUserId" data-color="#e95959" title="Xóa thành viên">
                                    <i class="icon-copy dw dw-delete-3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



